<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registro_opt"
    tools:context=".Registro">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registroimagen"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/usuario"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>


    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/registroimagen"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:layout_marginLeft="140dp"
        android:text="Seleccione una imagen"
        android:textColor="#ffffff"/>

    <EditText
        android:background="@drawable/editext"
        android:id="@+id/nombreetd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="330dp"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:hint="Nombre"
        android:textColorHint="#000000" />


    <EditText
        android:background="@drawable/editext"
        android:hint="Email"
        android:textColorHint="#000000"
        android:id="@+id/emailedt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="420dp"
        android:textColor="#000000"
        android:inputType="textPersonName"
        />

    <EditText
        android:background="@drawable/editext"
        android:id="@+id/contraseñaedt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="510dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:textColorHint="#000000"
        />

    <EditText
        android:background="@drawable/editext"
        android:id="@+id/contraseña2edt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="600dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:hint="Confirmar"
        />


    <Button
        android:id="@+id/registrobtn"
        android:layout_width="120dp"

        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="680dp"
        android:background="@color/colorPrimaryDark"
        android:text="Registrarse"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="italic">

    </Button>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="185dp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>